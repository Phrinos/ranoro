rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- PUBLIC DATA ---
    // Anyone can read public quotes
    match /publicQuotes/{quoteId} {
      allow read: if true;
      allow write: if false; // Cannot be changed by public
    }
    
    // Anyone can read public service sheets.
    // Write access is limited.
    match /publicServices/{serviceId} {
      allow read: if true;
      
      // Allow writes under two conditions:
      // 1. The user is authenticated (staff member managing the document).
      // 2. The user is unauthenticated BUT is only updating the signature fields.
      allow write: if (request.auth != null) || 
                      (request.method == 'update' && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
                        'customerSignatureReception', 'receptionSignatureViewed', 
                        'customerSignatureDelivery', 'deliverySignatureViewed'
                      ]));
    }

    // --- PRIVATE DATA ---
    // All other collections/documents are private and require authentication.
    // This covers the main database at /database/main.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
