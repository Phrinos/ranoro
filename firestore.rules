rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // The main data document. Only authenticated users can access it.
    match /database/main {
      allow read, write: if request.auth != null;
    }

    // Public quotes can be read by anyone with the link.
    // Only authenticated users (app users) can create or update them.
    match /publicQuotes/{quoteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Public service sheets can be read by anyone with the link.
    // Only authenticated users can create or update them.
    match /publicServices/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
