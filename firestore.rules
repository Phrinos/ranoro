rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default-deny all reads and writes
    // match /{document=**} {
    //   allow read, write: if false;
    // }

    // Allow logged-in users to read/write all collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Public service sheets can be read by anyone, but written only by auth users
    match /publicServices/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Public owner reports can be read by anyone
    match /publicOwnerReports/{reportId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
