rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Main app data, requires authenticated user.
    match /database/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Public quotes are world-readable, but only writable by authenticated users.
    match /publicQuotes/{quoteId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}
