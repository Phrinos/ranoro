rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // The main database document is private to authenticated users.
    match /database/main {
      allow read, write: if request.auth != null;
    }

    // Public collections are world-readable, but only writable by authenticated users.
    match /publicQuotes/{quoteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /publicServices/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
