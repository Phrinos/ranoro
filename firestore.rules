
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Main database document for the workshop.
    // Only authenticated users can access it.
    match /database/main {
      allow read, write: if request.auth != null;
    }
    
    // Publicly shared service sheets.
    // Anyone can read them.
    // Authenticated users can create/delete them.
    // Anyone (including unauthenticated server actions) can update ONLY the signature fields.
    match /publicServices/{serviceId} {
      allow get: if true;
      allow list: if false; // Security: do not allow listing all public services.
      allow create, delete: if request.auth != null;
      allow update: if request.auth != null || (
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['customerSignatureReception', 'customerSignatureDelivery', 'receptionSignatureViewed', 'deliverySignatureViewed'])
      );
    }

    // Publicly shared quotes.
    // Anyone can read them.
    // Only authenticated users can create, update, or delete them.
    match /publicQuotes/{quoteId} {
      allow get: if true;
      allow list: if false; // Security: do not allow listing all public quotes.
      allow create, update, delete: if request.auth != null;
    }
  }
}
