rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Previous Rules (for reference)
    // match /users/{userId} {
    //  allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
    // match /serviceRecords/{serviceId} {
    //   allow read, write: if request.auth != null;
    // }
    
    // Allow read access to public service sheets
    match /publicServices/{serviceId} {
      allow read;
      // Allow unauthenticated users to update ONLY the fields needed for scheduling
      allow update: if request.resource.data.keys().hasAll(['status', 'appointmentDateTime', 'appointmentStatus']);
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
