
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read-only access to specific documents needed for sharing
    match /publicServices/{publicId} {
      allow read;
      allow write: if false; // No public write access
    }

    // Allow authenticated users to read/write their own data and most app data
    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /serviceRecords/{serviceId} {
      allow read, write: if isAuthenticated();
    }
    
    match /vehicles/{vehicleId} {
        allow read, write: if isAuthenticated();
    }
    
    match /technicians/{technicianId} {
        allow read, write: if isAuthenticated();
    }

    match /administrativeStaff/{staffId} {
        allow read, write: if isAuthenticated();
    }
    
    match /inventory/{itemId} {
        allow read, write: if isAuthenticated();
    }
    
    match /sales/{saleId} {
        allow read, write: if isAuthenticated();
    }
    
    match /appRoles/{roleId} {
        allow read, write: if isAuthenticated();
    }

    match /inventoryCategories/{categoryId} {
      allow read, write: if isAuthenticated();
    }
    
    match /suppliers/{supplierId} {
      allow read, write: if isAuthenticated();
    }
    
    match /initialCashBalance/{balanceId} {
      allow read, write: if isAuthenticated();
    }

    match /cashDrawerTransactions/{transactionId} {
      allow read, write: if isAuthenticated();
    }

    match /vehiclePriceLists/{listId} {
      allow read, write: if isAuthenticated();
    }

    match /auditLogs/{logId} {
        allow read, write: if isAuthenticated();
    }

    match /drivers/{driverId} {
        allow read, write: if isAuthenticated();
    }

    match /rentalPayments/{paymentId} {
        allow read, write: if isAuthenticated();
    }

    match /vehicleExpenses/{expenseId} {
        allow read, write: if isAuthenticated();
    }

    match /ownerWithdrawals/{withdrawalId} {
        allow read, write: if isAuthenticated();
    }

    match /serviceTypes/{typeId} {
        allow read, write: if isAuthenticated();
    }

  }
}
