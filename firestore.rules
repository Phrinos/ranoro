rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // The main database document requires authentication for all operations.
    match /database/main {
      allow read, write: if request.auth != null;
    }

    // Public collections are readable by anyone for sharing links.
    // Writes are still protected and require authentication.
    match /publicQuotes/{quoteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /publicServices/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
