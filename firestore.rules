rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Main workshop database. Requires authentication to read or write.
    match /database/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Publicly readable collection for shared quotes.
    // Anyone with the link can read. Only authenticated users can create/update.
    match /publicQuotes/{quoteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Publicly readable collection for shared service sheets.
    // Anyone with the link can read. Only authenticated users can create/update.
    match /publicServices/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
