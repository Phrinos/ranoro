rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Colecciones Públicas (para compartir enlaces) ---
    // Legibles por todos, pero requieren autenticación para escribir.
    match /publicQuotes/{quoteId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /publicOwnerReports/{reportId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /publicServices/{serviceId} {
      allow read: if true;
      // Usuarios no autenticados solo pueden actualizar los campos de firma.
      allow update: if request.auth != null ||
                      (request.resource.data.diff(resource.data).affectedKeys()
                      .hasOnly(['customerSignatureReception', 'customerSignatureDelivery', 'receptionSignatureViewed', 'deliverySignatureViewed']));
      allow create, delete: if request.auth != null;
    }

    match /public_documents/{documentId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // --- Perfiles de Usuario ---
    // Los usuarios pueden leer y escribir en su propio documento, pero no en los de otros.
    // Esto es crucial para la seguridad y la privacidad.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      // Nota: La eliminación de perfiles por parte del cliente está deshabilitada por seguridad.
    }
    
    // --- CUALQUIER OTRA COLECCIÓN ---
    // Por defecto, se deniega el acceso a cualquier otra ruta de documento.
    // Esta es la regla de seguridad más importante para un entorno de producción.
    // Si necesitas dar acceso a otras colecciones (ej. 'services', 'vehicles'),
    // debes añadir una regla explícita para ellas, idealmente basada en roles.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
