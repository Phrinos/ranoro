rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow an authenticated user to read and create their own user profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Allow a user to read/write to a tenant document if their profile's tenantId matches
    match /tenants/{tenantId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
      // Allow creation of the tenant document if it doesn't exist yet by an authenticated user
      allow create: if request.auth != null && !exists(/databases/$(database)/documents/tenants/$(tenantId));
    }

    // Publicly readable collections
    match /publicServices/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow signed-in users (from the app) to write/update signatures
    }
    match /publicQuotes/{quoteId} {
        allow read: if true;
    }
    match /publicOwnerReports/{reportId} {
        allow read: if true;
    }
  }
}
