rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // The main database document, only accessible by authenticated users.
    match /database/main {
      allow read, write: if request.auth != null;
    }

    // Publicly readable quotes. Only authenticated users can create/update/delete.
    match /publicQuotes/{quoteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Publicly readable service sheets.
    match /publicServices/{serviceId} {
      allow read: if true;

      // Allow creation and deletion only by authenticated users.
      allow create, delete: if request.auth != null;

      // Allow updates by authenticated users, OR by anyone if they are only
      // changing the signature fields.
      allow update: if request.auth != null || (
                      request.auth == null &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly([
                        'customerSignatureReception', 'receptionSignatureViewed',
                        'customerSignatureDelivery', 'deliverySignatureViewed'
                      ])
                    );
    }
  }
}
