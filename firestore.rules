rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite el acceso de lectura y escritura a cualquier usuario que haya iniciado sesión.
    // Esto es adecuado para el desarrollo, pero deberías configurar reglas más detalladas para producción.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
