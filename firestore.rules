rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for quotes, and allow authenticated users to create them.
    match /publicQuotes/{quoteId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write the main database document
    match /database/main {
      allow read, write: if request.auth != null;
    }
  }
}
