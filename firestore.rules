
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Any authenticated user can read and write to the main database document.
    // This simplifies the logic and relies on application-level checks for roles.
    match /database/main {
      allow read, write: if request.auth != null;
    }

    // Individual user profiles can only be accessed by the user themselves.
    // This allows users to manage their own profile info securely.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public documents are world-readable, but only authenticated users can modify them.
    // This pattern is used for sharing quotes, service sheets, etc.
    match /publicServices/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /publicQuotes/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /publicOwnerReports/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Fallback: Deny all other access by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
