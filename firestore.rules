
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to read/write their own user profile.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow any authenticated user to create their own user profile if it doesn't exist.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
    }

    // Allow read/write to the main data document if the user is authenticated.
    match /database/{docId} {
       allow read, write: if request.auth != null;
    }

    // Public documents (e.g., for sharing links with customers)
    match /publicServices/{serviceId} {
      // Anyone can read a public document.
      allow read: if true;
      
      // Allow authenticated users (employees) to perform any update.
      // Allow unauthenticated customers to update ONLY signature fields.
      allow update: if request.auth != null || 
                      (request.resource.data.diff(resource.data).affectedKeys()
                      .hasOnly(['customerSignatureReception', 'customerSignatureDelivery']));
                      
      // Allow create/delete only for authenticated users (employees).
      allow create, delete: if request.auth != null;
    }

    // By default, deny access to any other path.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
