rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC COLLECTIONS
    // Anyone can read these, but no one can write.
    match /publicServices/{serviceId} {
      allow read: if true;
      allow write: if false;
    }
     match /publicQuotes/{quoteId} {
      allow read: if true;
      allow write: if false;
    }
    match /publicOwnerReports/{reportId} {
      allow read: if true;
      allow write: if false;
    }

    // PRIVATE COLLECTIONS
    // Only authenticated users can access these collections.
    
    // Users can read anyone's profile, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can read/write any of the main business documents.
    match /serviceRecords/{serviceId} {
      allow read, write: if request.auth != null;
    }
    match /vehicles/{vehicleId} {
      allow read, write: if request.auth != null;
    }
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }
    match /technicians/{technicianId} {
      allow read, write: if request.auth != null;
    }
    match /sales/{saleId} {
      allow read, write: if request.auth != null;
    }
    match /appRoles/{roleId} {
      allow read, write: if request.auth != null;
    }
    match /administrativeStaff/{staffId} {
        allow read, write: if request.auth != null;
    }
    match /drivers/{driverId} {
        allow read, write: if request.auth != null;
    }
    match /rentalPayments/{paymentId} {
        allow read, write: if request.auth != null;
    }
    match /ownerWithdrawals/{withdrawalId} {
        allow read, write: if request.auth != null;
    }
    match /vehicleExpenses/{expenseId} {
        allow read, write: if request.auth != null;
    }
    match /fixedExpenses/{expenseId} {
        allow read, write: if request.auth != null;
    }
    match /cashDrawerTransactions/{transactionId} {
        allow read, write: if request.auth != null;
    }
     match /initialCashBalance/{docId} {
        allow read, write: if request.auth != null;
    }

    // Configuration collections, readable by authenticated users.
    match /inventoryCategories/{categoryId} {
      allow read, write: if request.auth != null;
    }
    match /suppliers/{supplierId} {
      allow read, write: if request.auth != null;
    }
    match /vehiclePriceLists/{listId} {
      allow read, write: if request.auth != null;
    }
    match /serviceTypes/{typeId} {
      allow read, write: if request.auth != null;
    }
    match /auditLogs/{logId} {
      allow read, write: if request.auth != null;
    }
  }
}
