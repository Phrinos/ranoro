rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access for any authenticated user.
    // This is a common setup for development. For production, you'd want
    // to implement more granular, role-based security rules.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Public collections can be read by anyone, even unauthenticated users.
    match /publicServices/{serviceId} {
      allow get: if true;
      allow list, write: if request.auth != null; // Only authenticated users can write/list
    }
    
    match /publicOwnerReports/{reportId} {
        allow get: if true;
        allow list, write: if request.auth != null;
    }
  }
}
