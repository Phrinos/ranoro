rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- PUBLIC COLLECTIONS ---
    // These collections are for sharing links with customers.
    // They are fully public for read and write to ensure functionality.
    match /publicQuotes/{quoteId} {
      allow read, write: if true;
    }
    
    match /publicServices/{serviceId} {
      allow read, write: if true;
    }

    // --- PRIVATE DATABASE ---
    // The main database document can only be accessed by authenticated users.
    match /database/main {
      allow read, write: if request.auth != null;
    }

    // --- DEFAULT DENY RULE ---
    // Explicitly deny access to any other path to secure the database.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
