rules_version = '2';

// Reglas de Storage
service firebase.storage {
  match /b/{bucket}/o {
    // Regla global para permitir la lectura pública de todos los archivos
    // Esto es útil para que las imágenes en cotizaciones y reportes públicos sean accesibles.
    // Para un entorno de producción, considera restringir el acceso a rutas específicas
    // o requerir autenticación si los datos son sensibles.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Permite escribir solo si el usuario está autenticado
    }
  }
}
