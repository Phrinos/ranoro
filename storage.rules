rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authorized users to upload their service photos.
    // The path includes the service ID to keep photos organized.
    match /service-photos/{serviceId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow authorized users to upload their signatures.
    match /user-signatures/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
