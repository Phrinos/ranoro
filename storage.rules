rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regla general: permite leer a cualquiera, permite escribir solo a usuarios autenticados.
    // Esto es permisivo pero seguro para empezar. Se puede restringir m√°s adelante.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
