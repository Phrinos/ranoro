rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Service photos can be read by anyone (for public links)
    // but only written by authenticated users.
    match /service-photos/{path=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // User signatures can be read by anyone, but only written by the user themselves.
    match /user-signatures/{userId}/{path=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
