rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on all files, which is necessary for displaying
    // images via URL in the app and on public links.
    match /{allPaths=**} {
      allow read;
      
      // Only allow authenticated users to write (upload, update, delete) files.
      // This is a broad but secure rule for this application's needs.
      allow write: if request.auth != null;
    }
  }
}
