rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is useful for public assets like profile pictures or shared documents.
    // For more secure applications, you would want more restrictive rules.
    match /{allPaths=**} {
      allow read;
      // Only authenticated users can write files.
      allow write: if request.auth != null;
    }
  }
}
