
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any user to read any file. This is necessary for public links to work.
    // Allow any authenticated user to write any file. This is secure as only logged-in
    // users of your app can perform uploads.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
